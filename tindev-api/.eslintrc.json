{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["eslint-plugin-import-helpers"],
    "rules": {
      "linebreak-style": 0,
      "no-underscore-dangle": 0,
      "global-require": 0,
      "import/order": 0,
      "import-helpers/order-imports": [
        "warn",
        {
          "newlinesBetween": "always", // new line between groups
          "groups": [
            "module",
            "/^@shared/",
            [
              "parent",
              "sibling",
              "index"
            ]
          ],
          "alphabetize": {
            "order": "asc",
            "ignoreCase": true
          }
        }
      ]
    }
}
